// tsc xxx -w 表示监视文件变更
// 在tsconfig.json文件存在的情况下，可以使用tsc -w 命令，自动编译该文件所在的大文件夹；
// 本文件是ts编译器的配置文件，编译器可以根据本文件来配置编译；

// 常用的如下；
{
  // 包含文件，用于记录指定需要编译的文件
  "include": [
    // 存放路径
    // 两个** 表示任意目录，一个表示任意文件；
    "./**/*"
  ],
  // 不包含某个文件，也是输入路径；
  "exclude": ["./webpack.config.js"],
  // 继承某个tsconfig.json文件；
  // "extends": "",
  // 需要编译的文件，和includes相似，不常用；
  // "files": [],

  // 编译器的选项；
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig to read more about this file */

    // 指定编译js的版本，es版本；
    "target": "es2016",

    // 指定js模块化模板（import），引用模块的方法，es2015其实就是es6；
    "module": "es2015",

    // 指定项目中用到的库；一般不要改它，会改变默认值；如果在非浏览器环境下使用，没有默认的库，则需要填写，比方说document所使用的dom库，前端使用不要加，node环境使用时要加的；
    // "lib": [],

    // 编译后的文件放在哪里
    "outDir": "./dist",

    // 将编译后的代码合并为一个文件；不常用哦；
    // "outFile": "",

    // 是否允许js文件被编译过去；默认时false，即js文件不被编译；
    "allowJs": true,

    // 是否检查js代码语法错误；默认时false
    "checkJs": true,

    // 编译后是否保留注释；
    "removeComments": true,

    // 执行编译过程，不生成编译后的文件，默认false，不怎么用
    // "noEmit": true,

    // 报错后不编译生成文件，代码错误不编译，挺好的；
    "noEmitOnError": true,

    // 把所有的strict选线都设置成true；
    "strict": false,

    // 编译后的问文件是否开启js的严格模式
    // "alwaysStrict": true,
    
    // 检查，拒绝隐式的any类型
    "noImplicitAny": true,

    // 不允许隐式的不明确类型的this；类型不明的this不大安全；
    "noImplicitThis": true,

    // 可能出现null的情景是否严格检查；
    "strictNullChecks": true,

    /* Projects */
    // "incremental": true,                              /* 增量编译，只针对修改过的ts文件进行编译 */
    // "composite": true,                                /* Enable constraints that allow a TypeScript project to be used with project references. */
